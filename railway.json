{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "watchPatterns": [
            "server/**"
        ]
    },
    "deploy": {
        "startCommand": "cd server && npm install && node index.js",
        "restartPolicyType": "ON_FAILURE",
        "healthCheckPath": "/",
        "healthCheckTimeout": 100
    }
}